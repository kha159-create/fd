rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // قاعدة عامة: المستخدمون المسجلون فقط يمكنهم الوصول للبيانات
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // قاعدة محددة للمستخدمين - كل مستخدم يمكنه الوصول لبياناته فقط
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // قاعدة للنسخ الاحتياطية - المستخدمون المسجلون فقط
    match /backups/{backupId} {
      allow read, write: if request.auth != null;
    }
    
    // قاعدة عامة للأمان - منع الوصول للمجموعات الحساسة
    match /admin/{document=**} {
      allow read, write: if false; // منع الوصول الكامل
    }
    
    // قاعدة للاختبار - يمكن تعديلها حسب الحاجة
    match /test/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
